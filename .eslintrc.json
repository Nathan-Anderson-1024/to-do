{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "prefer-destructuring": "warn",
    "no-console": "warn",
    "camelcase": "off",
    "node/no-missing-import": "warn",
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": 
    [ "error",
      {
        "endOfLine": "auto"}
    ]
  }
}
